{
  "name": "@yukihirop/my-module-bundler",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "lerna run ts-node",
    "build": "tsc -b packages/bundler packages/plugin-transform-arrow-functions",
    "bundler:dev": "yarn build && ts-node packages/bundler/src/index.ts",
    "bundler:dev:debug": "yarn build && node --inspect -r ts-node/register packages/bundler/src/index.ts",
    "bundler:build": "tsc -p packages/bundler",
    "fmt": "prettier --write **/src/**/*.ts",
    "test": "yarn build && jest",
    "test:debug": "yarn build && node --inspect -r ts-node/register ./node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "jest": "^26.0.1",
    "prettier": "^2.0.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
